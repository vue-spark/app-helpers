{
  "name": "@vue-spark/app-helpers",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.20.0",
  "description": "Lightweight Helpers for Vue 3 Application Development.",
  "author": "leihaohao <https://github.com/l246804>",
  "license": "MIT",
  "homepage": "https://github.com/vue-spark/app-helpers#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue-spark/app-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/vue-spark/app-helpers/issues"
  },
  "keywords": [
    "vue",
    "app",
    "helpers",
    "permission",
    "sso",
    "tabs"
  ],
  "exports": {
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write --cache --cache-location ./node_modules/.cache/.prettier-cache",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/.eslint-cache",
    "lint:fix": "pnpm run lint --fix",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "vue-router": "^4.5.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@sxzz/prettier-config": "^2.2.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.13",
    "@vue/tsconfig": "^0.8.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.0",
    "eslint-plugin-format": "^1.0.2",
    "happy-dom": "^20.0.10",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
