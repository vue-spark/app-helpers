{
  "name": "@vue-spark/app-helpers",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.11.0",
  "description": "Lightweight Helpers for Vue 3 Application Development.",
  "author": "leihaohao <https://github.com/l246804>",
  "license": "MIT",
  "homepage": "https://github.com/vue-spark/app-helpers#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue-spark/app-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/vue-spark/app-helpers/issues"
  },
  "keywords": [
    "vue",
    "app",
    "helpers",
    "permission",
    "sso",
    "tabs"
  ],
  "exports": {
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier . --write --cache --cache-location ./node_modules/.cache/.prettier-cache",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/.eslint-cache",
    "lint:fix": "pnpm run lint --fix",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "vue-router": "^4.5.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@sxzz/prettier-config": "^2.2.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.17",
    "@vue/tsconfig": "^0.7.0",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^20.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.11.9",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.3",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
